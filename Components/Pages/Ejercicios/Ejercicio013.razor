@page "/ej013"
@rendermode InteractiveServer

<PageTitle>ejercicio 13</PageTitle>

<h3>ejercicio 13</h3>

<p>Verificar la cantidad de veces que se encuentra dicho digito en un dicho entero.</p>

<div class="form-group">
    <label for="txNumero">Numero: </label>
    <input type="number" class="form-control" id="txNumero" @bind="numero" />
</div>
<div class="form-group">
    <label for="txDigito">Digito: </label>
    <input type="number" class="form-control" id="txDigito" @bind="digito" />
</div>
<div class="form-group mt-2">
    <button class="btn btn-primary" @onclick="Calcular">Verificar</button>
</div>
<div>
    Resultado: @resultado
</div>


@code{
    private int numero;
    private int digito;
    private int  resultado;
    

    private void Calcular (){
        string digitoStr = digito.ToString();
        string numeroStr = numero.ToString();
        resultado = 0;

        foreach(char d in numeroStr){
            if(d.ToString() == digitoStr){
                resultado++;
            }
        }
        
    }
}