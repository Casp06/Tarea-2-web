@page "/ej023"
@rendermode InteractiveServer

<PageTitle>ejercicio 23</PageTitle>

<h3>ejercicio 23</h3>

<p>Verificar si la diferencia entre los dos valores es primo.</p>

<div class="form-group">
    <label for="txNumero">Numero: </label>
    <input type="number" class="form-control" id="txNumero" @bind="numero" />
</div>
<div class="form-group">
    <label for="txNumero2">Segundo numero: </label>
    <input type="number" class="form-control" id="txNumero2" @bind="numero2" />
</div>

<div class="form-group mt-2">
    <button class="btn btn-primary" @onclick="Calcular">Verificar</button>
</div>
<div>
    Resultado: @resultado
</div>


@code{
    private int numero;
    private int numero2;
    private int  resultado;
    
    private bool EsPrimo(int numero)
        {
            if (numero < 2)
            {
                return false;
            }

            for (int i = 2; i <= Math.Sqrt(numero); i++)
            {
                if (numero % i == 0)
                {
                    return false;
                }
            }

            return true;
        }
    private void Calcular()
    {
        int diferencia = Math.Abs(numero - numero2);

        if (EsPrimo(diferencia))
        {
            resultado = 1;
        }
        else
        {
            resultado = 0;
        }
    }
}