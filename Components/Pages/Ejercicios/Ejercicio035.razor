@page "/ej035"
@rendermode InteractiveServer

<PageTitle>ejercicio 35</PageTitle>

<h3>ejercicio 35</h3>

<p>Encuentre el mayor número primo que termine en 3 almacenado en el vector.</p>

<div class="row">

        <div class="form-group col-1">
            <label for="txNumero_0">Número 0: </label>
            <input type="number" class="form-control" id="txNumero_0" @bind="numeros[0]" />
        </div>
        <div class="form-group col-1">
            <label for="txNumero_1">Número 1: </label>
            <input type="number" class="form-control" id="txNumero_1" @bind="numeros[1]" />
        </div>
        <div class="form-group col-1">
            <label for="txNumero_2">Número 2: </label>
            <input type="number" class="form-control" id="txNumero_2" @bind="numeros[2]" />
        </div>
        <div class="form-group col-1">
            <label for="txNumero_3">Número 3: </label>
            <input type="number" class="form-control" id="txNumero_3" @bind="numeros[3]" />
        </div>
        <div class="form-group col-1">
            <label for="txNumero_4">Número 4: </label>
            <input type="number" class="form-control" id="txNumero_4" @bind="numeros[4]" />
        </div>
        <div class="form-group col-1">
            <label for="txNumero_5">Número 5: </label>
            <input type="number" class="form-control" id="txNumero_5" @bind="numeros[5]" />
        </div>
        <div class="form-group col-1">
            <label for="txNumero_6">Número 6: </label>
            <input type="number" class="form-control" id="txNumero_6" @bind="numeros[6]" />
        </div>
        <div class="form-group col-1">
            <label for="txNumero_7">Número 7: </label>
            <input type="number" class="form-control" id="txNumero_7" @bind="numeros[7]" />
        </div>
        <div class="form-group col-1">
            <label for="txNumero_8">Número 8: </label>
            <input type="number" class="form-control" id="txNumero_8" @bind="numeros[8]" />
        </div>
        <div class="form-group col-1">
            <label for="txNumero_9">Número 9: </label>
            <input type="number" class="form-control" id="txNumero_9" @bind="numeros[9]" />
        </div>       
</div>

<div class="form-group mt-2">
    <button class="btn btn-primary" @onclick="Calcular">Verificar</button>
</div>
<div>
    Resultado: 
    @if(resultado != -1){
         @resultado
    }else{
        <p>No hay ningún primo que termine en 3 en el vector.</p>
    }

</div>

@code {
    private int numero;
    private int[] numeros = new int[10];
    private int resultado;

    private void Calcular(){

        resultado = -1;
        numero = -1;

        for (int i = 0; i < numeros.Length; i++){
            if (EsPrimo(numeros[i]) && numeros[i] % 10 == 3)
            {
                if (numero == -1 || numeros[i] > numero)
                {
                    numero = numeros[i];
                    resultado = i; 
                }
            }
        }

    }
    static bool EsPrimo(int numero){
        if (numero < 2) return false;
            for (int i = 2; i <= Math.Sqrt(numero); i++){
                if (numero % i == 0) return false;
            }
            return true;
    } 
    }