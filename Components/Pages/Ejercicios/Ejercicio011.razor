@page "/ej011"
@rendermode InteractiveServer

<PageTitle>ejercicio 11</PageTitle>

<h3>ejercicio 11</h3>

<p>Verificar si un número es múltiplo de un dígito</p>

<div class="form-group">
    <label for="txNumero">Numero: </label>
    <input type="number" class="form-control" id="txNumero" @bind="numero" />
</div>
<div class="form-group">
    <label for="txDigito">Digito: </label>
    <input type="number" class="form-control" id="txDigito" @bind="digito" />
</div>
<div class="form-group mt-2">
    <button class="btn btn-primary" @onclick="Calcular">Verificar</button>
</div>
<div>
    Resultado: @resultado
</div>


@code{
    private int numero;
    private int digito;
    private int  resultado;
    

    private void Calcular (){
        
        if (Digito(numero,digito) == 0){
            resultado = 1;
        }else{
            resultado = 0;
        }
        
    }
    private int Digito(int n, int d){
        if (d == 0){
            return 0;
        }else{
            return n % d;
        }
    }
}